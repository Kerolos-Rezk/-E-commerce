@model Demo.BLL.Models.DepartmentVM


@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Department</h2>

<br />

<a asp-action="Index" asp-controller="Department" class="btn btn-primary">Back To Department</a>


<br />

<form asp-controller="Department" asp-action="Delete" class="form-group">


    <input type="hidden" asp-for="Id" />

    <label>Department Name</label>
    <input type="text" asp-for="DepartmentName" disabled class="form-control" />
    <br />

    <label>Department Code</label>
    <input type="text" asp-for="DepartmentCode" disabled class="form-control" />
    <br />

    <center>
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-action="Edit" asp-controller="Department" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    </center>

</form>

